<GameData>
	<!-- Removes the first and subsequent finder gold for Spain.-->
	<Traits>
		<Update>
			<Set NaturalWonderFirstFinderGold="0" NaturalWonderSubsequentFinderGold="0"/>
			<Where Type="TRAIT_SEVEN_CITIES"/>
		</Update>
	</Traits>

	<!-- Reduces costs of Conquistadors to usual Knight costs.-->
	<Units>
		<Update>
			<Set Cost="120" FoundAbroad="false" WorkRate="100"/>
			<Where Type="UNIT_SPANISH_CONQUISTADOR"/>
		</Update>
	</Units>
	
	<!-- Grants Conquistadors the ability to remov Forest, Jungle and Swamp.-->
	<Unit_Builds>
		<Row>
			<UnitType>UNIT_SPANISH_CONQUISTADOR</UnitType>
			<BuildType>BUILD_REMOVE_JUNGLE</BuildType>
		</Row>
		<Row>
			<UnitType>UNIT_SPANISH_CONQUISTADOR</UnitType>
			<BuildType>BUILD_REMOVE_FOREST</BuildType>
		</Row>
		<Row>
			<UnitType>UNIT_SPANISH_CONQUISTADOR</UnitType>
			<BuildType>BUILD_REMOVE_MARSH</BuildType>
		</Row>
	</Unit_Builds>
	
	
	<Language_en_US>
		<Update>
			<Set Text="[ICON_CULTURE] Culture, [ICON_HAPPINESS_1] Happiness, and tile yields from Natural Wonders doubled."/>
			<Where Tag="TXT_KEY_TRAIT_SEVEN_CITIES"/>
		</Update>
	</Language_en_US>
